<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="317dp"
            android:layout_height="101dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:src="@drawable/post_form_taker_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/post_form_taker_head" />

        <Button
            android:id="@+id/shareContributionButton"
            android:layout_width="423dp"
            android:layout_height="80dp"
            android:background="#38a76c"
            android:onClick="uploadContribution"
            android:text="צור בקשה"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/choosePictureButton"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:background="#2c6838"
            android:onClick="choosePicture"
            android:text="טען תמונה"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/shareContributionButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contributionShareImage"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/contributionShareImage"
            android:layout_width="197dp"
            android:layout_height="135dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_addPhoto"
            app:layout_constraintVertical_bias="0.133"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/contributionShareNameError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ED3B3B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.271" />

        <TextView
            android:id="@+id/contributionShareDescriptionError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ED3B3B"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contributionShareDescriptionText"
            app:layout_constraintVertical_bias="0.008" />

        <ImageView
            android:id="@+id/nose_hatruma"
            android:layout_width="249dp"
            android:layout_height="24dp"
            android:layout_marginStart="155dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:src="@drawable/post_form_taker_headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView18"
            app:srcCompat="@drawable/post_form_taker_headline" />

        <ImageView
            android:id="@+id/tiur_hatroma"
            android:layout_width="206dp"
            android:layout_height="29dp"
            android:layout_marginStart="179dp"
            android:layout_marginLeft="179dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_weight="1"
            android:src="@drawable/post_form_taker_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contributionShareNameError"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/post_form_taker_description" />

        <ImageView
            android:id="@+id/txt_addPhoto"
            android:layout_width="186dp"
            android:layout_height="29dp"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_weight="1"
            android:src="@drawable/picture_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contributionShareDescriptionError"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/picture_add" />

        <EditText
            android:id="@+id/contributionShareNameText"
            android:layout_width="315dp"
            android:layout_height="52dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nose_hatruma"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/contributionShareDescriptionText"
            android:layout_width="365dp"
            android:layout_height="112dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tiur_hatroma"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
